<%- include('../includes/head.ejs')%> <%-
include('../includes/navigation.ejs')%>
<main class="columns is-centered mt-4">
  <form
    action="/admin/<% if (editMode) { %>edit-product<% } else { %>add-product<% } %>"
    method="POST"
    class="column is-half card p-6"
  >
    <div class="field">
      <label for="title" class="label">Title</label>
      <div class="control">
        <input
          type="text"
          name="title"
          id="title"
          class="input"
          value="<% if (editMode) { %><%= product.title %><% } %>"
        />
      </div>
    </div>
    <div class="field">
      <label for="imageUrl" class="label">Image URL</label>
      <div class="control">
        <input
          type="text"
          name="imageUrl"
          id="imageUrl"
          class="input"
          value="<% if (editMode) { %><%= product.imageUrl %><% } %>"
        />
      </div>
    </div>
    <div class="field">
      <label for="price" class="label">Price</label>
      <div class="control">
        <input
          type="number"
          name="price"
          id="price"
          class="input"
          step="0.01"
          value="<% if (editMode) { %><%= product.price %><% } %>"
        />
      </div>
    </div>
    <div class="field">
      <label for="description" class="label">Description</label>
      <div class="control">
        <textarea name="description" id="description" rows="5" class="textarea">
<% if (editMode) { %><%= product.description %><% } %>
        </textarea>
      </div>
    </div>
    <% if (editMode) { %>
    <input type="hidden" name="productId" value="<%= product._id %>" />
    <% } %>
    <div class="control">
      <button class="button is-link" type="submit">
        <% if (editMode) { %>Update Product<% } else { %>Add Product<% } %>
      </button>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
  </form>
</main>
<%- include('../includes/end.ejs')%>
